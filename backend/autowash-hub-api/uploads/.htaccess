#### Security and access rules for uploads (Apache 2.4/LiteSpeed compatible)

# Stop any rewrites inside uploads (serve files directly)

RewriteEngine Off

# Prevent execution of scripts

<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
Require all denied
</FilesMatch>

# Allow only image file access

<FilesMatch "\.(jpe?g|png|gif|webp)$">
Require all granted
</FilesMatch>

# Prevent directory listing

Options -Indexes

# Correct MIME types

<IfModule mod_mime.c>
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
    AddType image/webp .webp
</IfModule>

# Cache control for images

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
</IfModule>

# Security headers

<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
